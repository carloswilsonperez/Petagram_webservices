<?xml version="1.0" encoding="utf-8"?>

<!-- Si no se esta usando un recycler, pasar este codigo al activity_main.xml-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_gravity="center"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radious_cardview">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/miActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="330dp"
                android:src="@drawable/dog1"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/btnLike"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dog_bone_24"
                    />

                <TextView
                    android:id="@+id/tvNombreCV"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre Perro"
                    />

                <TextView
                    android:id="@+id/tvLikesCV"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    />

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/dog_bone_color_24"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
